<Window x:Class="Diddle.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Diddle" Height="230" Width="150" WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <StackPanel>
        <Border x:Name="BrdrStatus" CornerRadius="3" Padding="5" Margin="5">
            <TextBlock x:Name="TxtStatus" FontSize="14" HorizontalAlignment="Center" />
        </Border>
        <Button Content="Enable" Click="OnEnableClicked" Padding="3" Margin="5" />
        <Button Content="Disable" Click="OnDisableClicked" Padding="3" Margin="5" />
        <Rectangle Height="1" Fill="Gray" Margin="5" />
        <Button Content="Go to folder" Click="OnOpenDirectoryClicked" Padding="3" Margin="5" />
        <Button Content="Open file" Click="OnOpenFileClicked" Padding="3" Margin="5" />
    </StackPanel>
</Window>
